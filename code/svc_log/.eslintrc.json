{
  "env": {
    "browser": false,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-undef": [
      "error",
      {
        "typeof": true
      }
    ]
  },
  "globals": {
    "require": "readonly",
    "module": "readonly",
    "console": "readonly",
    "process": "readonly",
    "setTimeout": "readonly"
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/"]
}
